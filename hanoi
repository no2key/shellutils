#!/bin/bash 
# hanoi 
  
#
#           x                         y                         z
#           _                         _                         _
#          | |                       | |                       | |
#         _| |_                      | |                       | |
#        |_____|                     | |                       | |
#       |_______|                    | |                       | |
#      |_________|                   | |                       | |
#     |___________|                  | |                       | |
#    |_____________|                 | |                       | |
#   |_______________|         _______| |_______         _______| |_______ 
#  |                 |       |                 |       |                 |
# -----------------------------------------------------------------------------
#
#           #1                        #2                        #3
#

n=${1:-1} 
move()
{
   (( $1 == 1 )) && echo  "$2 --> $4" || {
      move $(($1-1)) $2 $4 $3
      echo  "$2 --> $4"
      move $(($1-1)) $3 $2 $4
   }
}

move ${n} x y z
echo
echo "Total steps: 2^${n}-1=$((2**${n}-1))"
